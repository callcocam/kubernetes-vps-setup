# Dockerfile para Desenvolvimento Local
# Otimizado para hot-reload e debugging
FROM php:8.4-fpm-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    nginx \
    supervisor \
    postgresql-dev \
    libpng-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    zip \
    unzip \
    git \
    curl \
    nodejs \
    npm \
    bash

# Instalar extensões PHP
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) \
        pdo \
        pdo_pgsql \
        gd \
        pcntl \
        bcmath \
        opcache

# Instalar Xdebug para desenvolvimento
RUN apk add --no-cache $PHPIZE_DEPS linux-headers \
    && pecl install xdebug redis \
    && docker-php-ext-enable xdebug redis

# Configurar Xdebug
RUN echo "xdebug.mode=debug" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.client_host=host.docker.internal" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.client_port=9003" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Configurar diretório de trabalho
WORKDIR /var/www/html

# Nota: Os arquivos de configuração são montados via volumes no docker-compose.yml (use: docker compose)
# Não há COPY aqui pois usamos bind mounts para hot-reload durante desenvolvimento

# Criar diretórios necessários
RUN mkdir -p /var/log/supervisor /run/nginx

# Script de inicialização para ajustar permissões após volume ser montado
RUN echo '#!/bin/sh' > /docker-entrypoint.sh && \
    echo 'set -e' >> /docker-entrypoint.sh && \
    echo '' >> /docker-entrypoint.sh && \
    echo '# Criar diretórios Laravel se não existirem' >> /docker-entrypoint.sh && \
    echo 'mkdir -p storage/framework/{sessions,views,cache}' >> /docker-entrypoint.sh && \
    echo 'mkdir -p storage/logs' >> /docker-entrypoint.sh && \
    echo 'mkdir -p bootstrap/cache' >> /docker-entrypoint.sh && \
    echo '' >> /docker-entrypoint.sh && \
    echo '# Ajustar permissões' >> /docker-entrypoint.sh && \
    echo 'chmod -R 775 storage bootstrap/cache 2>/dev/null || true' >> /docker-entrypoint.sh && \
    echo 'chown -R www-data:www-data storage bootstrap/cache 2>/dev/null || true' >> /docker-entrypoint.sh && \
    echo '' >> /docker-entrypoint.sh && \
    echo '# Executar comando' >> /docker-entrypoint.sh && \
    echo 'exec "$@"' >> /docker-entrypoint.sh && \
    chmod +x /docker-entrypoint.sh

# Expor portas
EXPOSE 80 9000

# Entrypoint para configurar permissões
ENTRYPOINT ["/docker-entrypoint.sh"]

# Iniciar Supervisor (gerencia Nginx e PHP-FPM)
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
