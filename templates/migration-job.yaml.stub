apiVersion: batch/v1
kind: Job
metadata:
  name: migration
  namespace: {{NAMESPACE}}
spec:
  template:
    spec:
      containers:
      - name: migration
        image: ghcr.io/{{GITHUB_REPO}}:latest
        imagePullPolicy: IfNotPresent
        command: ["php", "artisan", "migrate", "--force"]
        envFrom:
        - configMapRef:
            name: app-config
        - secretRef:
            name: app-secrets
      restartPolicy: OnFailure
  backoffLimit: 3
